{{#if article}}

  {{#each article}}
  <div class="card" style="display: inline-block; width: 300px; margin:25px;">
  <img class="card-top colorize" style="height: 50px; width: 300px;">
   <div class="card-body">
    <h5 class="card-title">{{this.headline}}</h5>
         <p class="card-text">{{this.summary}}</p>
      <p class="card-text">{{this.url}}</p>
      <a class="saveMe" href="#" class="card-link" 
        data-headline="{{this.headline}}"
        data-summary="{{this.summary}}"
        data-url="{{this.url}}"
        data-toggle="modal" data-target="#savedModal"
        >Save Article</a>
    </div>
  </div>
   
  {{/each}}

{{/if}}

<!-- Modal -->
<div class="modal fade" id="savedModal" tabindex="-1" role="dialog" aria-labelledby="savedModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="savedModalLabel">Success!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        You've saved this article!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
      </div>
    </div>
  </div>
</div>
